ACTION_IF zs_cons_add_acid_vial BEGIN

    COPY ~%MOD_FOLDER%/items/throwables/acid_vial~ ~override~
    ADD_PROJECTILE ~%MOD_FOLDER%/pro/acid_vial/ZSCSACVZ.PRO~
    COPY_EXISTING ~zscsacv0.itm~ ~override~
        LPF ALTER_ITEM INT_VAR id_ref_name=RESOLVE_STR_REF(@190) id_ref_desc=RESOLVE_STR_REF(@191) price = zs_cons_throwable_price_acid_vial END
        LPF ALTER_HEADER INT_VAR projectile = %ZSCSACVZ% END

END

